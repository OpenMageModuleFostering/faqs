<config>
    <modules>
        <Mage_Faqs>
            <version>0.1.0</version>
        </Mage_Faqs>
    </modules>
    <frontend>
        <routers>
            <faqs>
                <use>standard</use>
                <args>
                    <module>Mage_Faqs</module>
                    <frontName>faqs</frontName>
                </args>
            </faqs>
        </routers>
        <layout>
            <updates>
                <faqs>
                    <file>faqs.xml</file>
                </faqs>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<faqs>
				<use>admin</use>
				<args>
					<module>Mage_Faqs</module>
					<frontName>faqs</frontName>
				</args>
			</faqs>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			 <cms>
                		<children>
                   		 <Mage_Faqs>
                        		<title>Faq's Management</title>
						<action>faqs/adminhtml_faqs</action>
                    		</Mage_Faqs>
                		</children>
            	</cms>
		</menu>
		
		<layout>
			<updates>
				<faqs>
					<file>faqs.xml</file>
				</faqs>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <faqs>
                <class>Mage_Faqs_Model</class>
                <resourceModel>faqs_mysql4</resourceModel>
            </faqs>
            <faqs_mysql4>
                <class>Mage_Faqs_Model_Mysql4</class>
                <entities>
                    <faqs>
                        <table>faqs</table>
                    </faqs>
                </entities>
            </faqs_mysql4>
        </models>
        <resources>
            <faqs_setup>
                <setup>
                    <module>Mage_Faqs</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </faqs_setup>
            <faqs_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </faqs_write>
            <faqs_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </faqs_read>
        </resources>
        <blocks>
            <faqs>
                <class>Mage_Faqs_Block</class>
            </faqs>
        </blocks>
        <helpers>
            <faqs>
                <class>Mage_Faqs_Helper</class>
            </faqs>
        </helpers>
    </global>
</config>